<Page
    x:Class="Vantus.App.Pages.ModesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Vantus.App.ViewModels"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="20" Padding="24">
            <TextBlock Text="Modes &amp; Presets" Style="{StaticResource TitleTextBlockStyle}" />

            <TextBlock Text="Choose a preset configuration to quickly apply recommended settings." Style="{StaticResource BodyTextBlockStyle}" />

            <ComboBox Header="Select Preset" ItemsSource="{x:Bind ViewModel.AvailablePresets}" SelectedItem="{x:Bind ViewModel.SelectedPreset, Mode=TwoWay}" Width="300" />

            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Preview Changes" Command="{x:Bind ViewModel.PreviewChangesCommand}" />
                <Button Content="Apply Preset" Command="{x:Bind ViewModel.ApplyPresetCommand}" Style="{StaticResource AccentButtonStyle}" />
            </StackPanel>

            <TextBlock>
                <Run Text="Active Preset: " />
                <Run Text="{x:Bind ViewModel.ActivePreset, Mode=OneWay}" FontWeight="Bold" />
            </TextBlock>

            <ItemsControl ItemsSource="{x:Bind ViewModel.Diffs, Mode=OneWay}">
                 <ItemsControl.ItemTemplate>
                     <DataTemplate x:DataType="vm:DiffGroup">
                          <StackPanel Margin="0,10">
                              <TextBlock Text="{x:Bind Page}" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8"/>
                              <ItemsControl ItemsSource="{x:Bind Items}">
                                   <ItemsControl.ItemTemplate>
                                       <DataTemplate x:DataType="vm:DiffItem">
                                           <Grid ColumnDefinitions="2*,1*,1*" Margin="0,4">
                                                <TextBlock Text="{x:Bind Label}" Grid.Column="0"/>
                                                <TextBlock Text="{x:Bind OldValue}" Grid.Column="1" Foreground="Red" Opacity="0.8"/>
                                                <TextBlock Text="{x:Bind NewValue}" Grid.Column="2" Foreground="Green" FontWeight="Bold"/>
                                           </Grid>
                                       </DataTemplate>
                                   </ItemsControl.ItemTemplate>
                              </ItemsControl>
                          </StackPanel>
                     </DataTemplate>
                 </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Page>
